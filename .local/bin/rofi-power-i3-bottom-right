#!/bin/bash

MENU="$(rofi -sep "|" -dmenu -i -p 'System' -location 3 -xoffset -10 -yoffset 620 -width 20 -hide-scrollbar -line-padding 4 -padding 20 -lines 4 -font "JetBrainsMono Nerd Font 12" <<< " Lock| Logout| Reboot| Shutdown")"

           case "$MENU" in
                *Lock) i3lock-fancy ;;
                *Logout) i3-msg exit;;
                *Reboot) systemctl reboot ;;
                *Shutdown) systemctl poweroff
            esac
